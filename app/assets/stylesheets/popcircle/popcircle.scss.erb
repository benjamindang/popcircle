@import 'font-awesome';

.popcircle-box {
  width: 500px;
  height: 500px;
  float: left;
}

.popcircle-trigger {
  width: 255px;
  height: 255px;
  position: relative;
  z-index: 10;
  left: 110px;
  top: 110px;
  background-image: url(<%= asset_url('big_round.png') %>);
  cursor: pointer;
}

.popcircle {
  position: relative;
  z-index: 9;
  width: 500px;
  height: 500px;
  left: 0px;
  top: -250px;
}

.popcircle ul {
  list-style: none;
  padding: 0px;
  margin: 0px;
  height: auto;
  cursor: pointer;
}

.popcircle ul li {
  top: 187.5px;
  left: 187.5px;
  height: 100px;
  width: 100px;
  position: absolute;
}

.popcircle > ul > li > a {
  display: table;
  height: 100%;
  text-decoration: none;
  margin: auto;
  i {
    display: table-cell;
    vertical-align: middle;
  }
}